{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ES6", "ES2022", "ESNext"],
    "sourceMap": true,
    "strict": true,
    "noImplicitThis": true /* Raise error on 'this' expressions with an implied 'any' type. */,
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noImplicitAny": true,
    "moduleResolution": "node", // nod_modules からライブラリを読み込む
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"] // tsファイル内でのimportの相対解決に必要, baseUrlも併せてセットする必要あり
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "jsx": "react",
    "resolveJsonModule": true
  }
}
