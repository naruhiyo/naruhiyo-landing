{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node", // nod_modules からライブラリを読み込む
    "lib": ["ES2021", "DOM"],
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
