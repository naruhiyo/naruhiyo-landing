{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src", "types"],
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2018", "dom", "es2015.promise"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "types/**/*.ts"],
  "exclude": [
    "coverage",
    "dist",
    "node_modules"
  ]
}
