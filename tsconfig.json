{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src", "typings", "stories"],
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2018", "dom", "es2015.promise"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "compilerOptions": {
        "typeRoots": ["types", "node_modules_@types"]
    }
  },
  "include": ["./src/**/*", "./test", "types/**/*.ts", "typings/yml.d.ts"],
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "jest.config.js",
    "jest.config.feature.js",
    "jest-puppeteer.config.js",
    "./src/setupTests.ts",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./feature/**/*.test.ts",
    "./feature/**/*.test.tsx"
  ]
}
